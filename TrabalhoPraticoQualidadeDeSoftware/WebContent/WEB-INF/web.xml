<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
	 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	 version="3.0">
	 
  <servlet>
    <servlet-name>CalculoIMC</servlet-name>
    <servlet-class>br.edu.uniritter.trabalho.servlet.CalculoIMCServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CalculoIMC</servlet-name>
    <url-pattern>/calculoIMC</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>CalculoTGC</servlet-name>
    <servlet-class>br.edu.uniritter.trabalho.servlet.CalculoTGCServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CalculoTGC</servlet-name>
    <url-pattern>/calculoTGC</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>PesoIdeal</servlet-name>
    <servlet-class>br.edu.uniritter.trabalho.servlet.CalculoPesoIdealServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>PesoIdeal</servlet-name>
    <url-pattern>/calculoPesoIdeal</url-pattern>
  </servlet-mapping>
  
  <session-config>
	<session-timeout>
		60
	</session-timeout>
  </session-config>
  
  <welcome-file-list>
  	<welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>